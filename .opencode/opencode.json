{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "ask",
      "ls*": "allow",
      "cat*": "allow",
      "grep*": "allow",
      "echo*": "allow",
      "tail*": "allow",
      "pwd*": "allow",
      "find*": "allow",
      "wc*": "allow",
      "head*": "allow",
      "tree*": "allow",
      "sort*": "allow",
      "git status": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "npm list": "allow",
      "npm test": "allow",
      "npm run test": "allow",
      "npm lint": "allow",
      "npm run lint": "allow",
      "npm run lint:fix": "allow",
      "npm format": "allow",
      "npm run format": "allow",
      "npm run compile": "allow"
    }
  },
  "mcp": {
    "cloudflare": {
      "enabled": true,
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp"
    }
  }
}
