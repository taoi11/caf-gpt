{
	"name": "caf-gpt",
	"description": "AI-powered assistance tools for CAF troops with modular, maintainable architecture",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run build && wrangler dev",
		"dev:local": "npm run build && wrangler dev --local",
		"dev:remote": "npm run build && wrangler dev --remote",
		"build": "vite build",
		"prepare": "svelte-kit sync && npm run cf-typegen:safe",
		"postinstall": "npm run cf-typegen:safe",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --write . && eslint .",
		"test": "npm run test:unit -- --run",
		"test:coverage": "vitest --coverage",
		"deploy": "wrangler deploy",
		"cf-typegen": "wrangler types",
		"cf-typegen:safe": "wrangler types || echo 'Type generation skipped - using committed types'"
	},
	"devDependencies": {
		"@eslint/compat": "^1.1.1",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-cloudflare": "^7.0.4",
		"@sveltejs/kit": "^2.21.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^24",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.1",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.14.0",
		"vite": "^6.3.5",
		"vitest": "^3.0.0",
		"wrangler": "^4.24.3"
	},
	"overrides": {
		"cookie": ">=0.7.0",
		"esbuild": ">=0.25.0"
	},
	"dependencies": {
		"@libsql/client": "^0.15.9",
		"agents": "^0.0.95",
		"drizzle-orm": "^0.44.2",
		"openai": "^5.3.0",
		"pg": "^8.16.3"
	}
}
